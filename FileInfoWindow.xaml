<Window
    Width="500"
    Height="350"
    mc:Ignorable="d"
    Icon="Logo.ico"
    Title="О файле"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    x:Class="Notepad.FileInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Window.Resources>

        <Style x:Key="StyleLabel">
            <Setter Property="Control.FontSize" Value="13" />
            <Setter Property="Control.Margin" Value="0.5" />
            <Setter Property="Control.Padding" Value="10" />
            <Setter Property="Control.BorderBrush" Value="#AAA" />
            <Setter Property="Control.BorderThickness" Value="1" />
            <Setter Property="Control.HorizontalAlignment" Value="Stretch" />
            <Setter Property="Control.HorizontalContentAlignment" Value="Center" />
            <Setter Property="Control.VerticalContentAlignment" Value="Center" />
        </Style>

    </Window.Resources>

    <StackPanel VerticalAlignment="Center">

        <Label
            x:Name="FileNotFound"
            BorderThickness="0"
            Visibility="Collapsed"
            Content="Файл не найден."
            HorizontalAlignment="Center"
            Style="{StaticResource StyleLabel}" />

        <Grid
            x:Name="Table"
            Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Имя"
                Style="{StaticResource StyleLabel}" />

            <ScrollViewer
                Grid.Row="0"
                Grid.Column="1"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled">

                <Label
                    x:Name="Name"
                    Style="{StaticResource StyleLabel}" />

            </ScrollViewer>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Расположение"
                Style="{StaticResource StyleLabel}" />

            <ScrollViewer
                Grid.Row="1"
                Grid.Column="1"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled">

                <Label
                    x:Name="Path"
                    Style="{StaticResource StyleLabel}" />

            </ScrollViewer>

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Расширение"
                Style="{StaticResource StyleLabel}" />

            <Label
                x:Name="Extension"
                Grid.Row="2"
                Grid.Column="1"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Content="Дата создания"
                Style="{StaticResource StyleLabel}" />

            <Label
                x:Name="DateCreation"
                Grid.Row="3"
                Grid.Column="1"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="4"
                Grid.Column="0"
                Content="Последнее изменение"
                Style="{StaticResource StyleLabel}" />

            <Label
                x:Name="LastChange"
                Grid.Row="4"
                Grid.Column="1"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Content="Размер"
                Style="{StaticResource StyleLabel}" />

            <Label
                x:Name="Length"
                Grid.Row="5"
                Grid.Column="1"
                Style="{StaticResource StyleLabel}" />

        </Grid>

    </StackPanel>

</Window>