<Window
    Width="500"
    Height="450"
    mc:Ignorable="d"
    Icon="Logo.ico"
    Title="О программе"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    x:Class="Notepad.InfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Window.Background>

        <LinearGradientBrush
            StartPoint="0.5,0"
            EndPoint="0.5, 0.9">

            <GradientStop
                Offset="0"
                Color="#AFA" />

            <GradientStop
                Offset="1"
                Color="#FFF" />

        </LinearGradientBrush>

    </Window.Background>

    <Window.Resources>

        <Style x:Key="StyleLabel">
            <Setter Property="Control.FontSize" Value="14" />
            <Setter Property="Control.Margin" Value="0.5" />
            <Setter Property="Control.Padding" Value="10" />
            <Setter Property="Control.BorderBrush" Value="#AAA" />
            <Setter Property="Control.BorderThickness" Value="1" />
            <Setter Property="Control.HorizontalAlignment" Value="Stretch" />
            <Setter Property="Control.HorizontalContentAlignment" Value="Center" />
            <Setter Property="Control.VerticalContentAlignment" Value="Center" />
        </Style>

    </Window.Resources>

    <StackPanel
        Orientation="Vertical"
        VerticalAlignment="Center">

        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center">

            <Image
                Width="125"
                Margin="0, 5, 10, 5"
                Source="Logo.ico" />

            <Label
                Content="Notepad"
                FontSize="23"
                Margin="10, 5, 0, 5"
                VerticalContentAlignment="Center" />

        </StackPanel>

        <Grid Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Дата создания"
                Style="{StaticResource StyleLabel}" />

            <Label
                x:Name="DateCreation"
                Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Последнее изменение"
                Style="{StaticResource StyleLabel}" />

            <Label
                x:Name="LastChange"
                Grid.Row="1"
                Grid.Column="1"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Разработчик"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="2"
                Grid.Column="1"
                Content="Артур Кононов"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Content="Язык программирования"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="3"
                Grid.Column="1"
                Content="C#"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="4"
                Grid.Column="0"
                Content="Операционная система"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="4"
                Grid.Column="1"
                Content="Windows"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="5"
                Grid.Column="0"
                Content="Тип приложения"
                Style="{StaticResource StyleLabel}" />

            <Label
                Grid.Row="5"
                Grid.Column="1"
                Content="Текстовый редактор"
                Style="{StaticResource StyleLabel}" />

        </Grid>

    </StackPanel>

</Window>